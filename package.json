{
  "name": "elgato-stream-deck-packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn workspaces run build && node ./scripts/watch.js",
    "postinstall": "lerna bootstrap",
    "dist-web": "cd packages/webhid-demo && yarn dist",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "lint": "eslint . --ext .ts --ext .js --ignore-pattern dist",
    "bump": "lerna version --conventional-commits",
    "publish": "lerna publish from-package"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "devDependencies": {
    "@julusian/jpeg-turbo": "^1.0.0",
    "@sofie-automation/code-standard-preset": "^0.2.4",
    "@types/jest": "^26.0.20",
    "@types/jpeg-js": "^0.3.7",
    "@types/node": "^14.14.31",
    "@types/node-hid": "^1.3.0",
    "@types/sharp": "^0.27.1",
    "concurrently": "^6.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "jest-haste-map": "^26.6.2",
    "jest-resolve": "^26.6.2",
    "jimp": "^0.16.1",
    "lerna": "^3.22.1",
    "open-cli": "^6.0.1",
    "pureimage": "^0.2.7",
    "sharp": "^0.27.2",
    "standard-version": "^9.1.1",
    "stream-buffers": "^3.0.2",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "~4.0.5",
    "usb-detection": "^4.10.0",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/node",
      "packages/webhid",
      "packages/webhid-demo"
    ]
  }
}
