{
  "name": "elgato-stream-deck-packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start-web": "cd packages/webhid-demo && yarn start",
    "dist-web": "cd packages/webhid-demo && yarn dist",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "dev": "yarn workspaces run build && node ./scripts/watch.js"
  },
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "^0.2.4",
    "@types/jest": "^26.0.20",
    "concurrently": "^6.0.0",
    "jest": "^26.6.3",
    "jest-haste-map": "^26.6.2",
    "jest-resolve": "^26.6.2",
    "open-cli": "^6.0.1",
    "standard-version": "^9.1.1",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "typescript": "~4.2.2"
  },
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/node",
      "packages/webhid",
      "packages/webhid-demo"
    ]
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  }
}
