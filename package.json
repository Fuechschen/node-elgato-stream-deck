{
  "name": "elgato-stream-deck-packages",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn build && node ./scripts/watch.js",
    "postinstall": "lerna bootstrap",
    "build": "yarn lerna exec yarn build",
    "test": "yarn lint && yarn unit",
    "unit": "jest",
    "send-coverage": "codecov",
    "lint:raw": "eslint --ext .ts --ext .js --ext .tsx --ext .jsx --ignore-pattern dist",
    "lint": "yarn lint:raw packages",
    "lint-fix": "yarn lint --fix",
    "bump": "lerna version --exact --conventional-commits --no-push -m \"chore(release): publish %s\"",
    "publish2": "lerna publish from-package",
    "validate:dependencies": "yarn audit && yarn license-validate",
    "license-validate": "yarn sofie-licensecheck --allowPackages \"buffers@0.1.1;@elgato-stream-deck/webhid-demo@$(node -p \"require('./packages/webhid-demo/package.json').version\");caniuse-lite@1.0.30001283;npm-lifecycle@3.1.5\""
  },
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint:raw --fix"
    ]
  },
  "devDependencies": {
    "@julusian/jpeg-turbo": "^1.1.1",
    "@sofie-automation/code-standard-preset": "0.5.1-nightly-feat-rules-updates-type-checking-20211202-101923-a57e9f6.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^14.17.34",
    "@types/node-hid": "^1.3.1",
    "@types/sharp": "^0.29.4",
    "codecov": "^3.8.3",
    "concurrently": "^6.4.0",
    "copy-webpack-plugin": "^9.1.0",
    "cross-env": "^7.0.3",
    "jest": "^27.4.3",
    "jimp": "^0.16.1",
    "lerna": "^4.0.0",
    "open-cli": "^6.0.1",
    "pureimage": "^0.3.6",
    "sharp": "^0.29.3",
    "stream-buffers": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "~4.2",
    "usb-detection": "^4.13.0",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  },
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/node",
      "packages/webhid",
      "packages/webhid-demo"
    ]
  }
}
